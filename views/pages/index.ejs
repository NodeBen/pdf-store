<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">

  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</head>

<body>
        
    <div class="container">

        <% if(is_auth) { %>
            <a href="/signup/logout">Logout</a>
        <% } %>
        
        <h1><%= products.length %> Products</h1>

        <table class="table">
            <% products.forEach(function(product) { %>
            <tr>
                <td><%= product.id %></td>
                <td><%= product.name %></td>
                <td><%= product.EUR_price %></td>
                <td><%= product.orders_counter %></td>
                <td><input type="button" class="order" data-id="<%= product.id %>" value="Order" /></td>
            </tr> 
            <% });%>
        </table>
    
        <ul>
            <li><a href="/getUserOrders" target="_blank">getUserOrder</a></li>
            <li><a href="/getUserProducts" target="_blank">getUserProducts</a></li>
        </ul>
        
    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Connection</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              
            </div>
          </div>
        </div>
    </div>

    <script>
    
    $(document).ready(function() {
        $('input.order').on('click',function() {
            var id = $(this).data('id');

            $.ajax('/ajax/order?id=' + id,{
                dataType:'json',
                success: function(data) {
                    console.log(data);
                    if(data.status) {
                        alert(data.output);
                    } else {
                        alert("Error : missing data");
                    }
                },
                error: function(jqxhr,statusText, errorThrown) {
                    if(jqxhr.status == 401) {
                        
                        $.ajax('/signup/login',{
                            success: function(html) {
                                $('#myModal .modal-body').html(html);
                                $('#myModal').modal();
                            }
                        });

                    } else {
                        alert("Error " + statusText + " " + errorThrown+ " " + jqxhr.status);
                    }
                }
            })
        });
    })
    </script>
</body>
</html>